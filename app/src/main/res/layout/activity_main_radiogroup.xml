<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa" />

    <RadioGroup

        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ll_item_home"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/main_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/ll_item_invest"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/main_invite_selector"
            android:text="我要投资" />

        <RadioButton
            android:id="@+id/ll_item_me"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/main_me_selector"
            android:text="我的资产" />

        <RadioButton
            android:id="@+id/ll_item_more"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/main_more_selector"
            android:text="更多" />

    </RadioGroup>

</LinearLayout>
